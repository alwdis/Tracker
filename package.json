{
  "name": "tracker",
  "version": "5.0.4",
  "description": "Personal media tracker (Films/Series/Anime).",
  "author": "alwdis",
  "license": "MIT",
  "private": true,
  "homepage": "./",
  "main": "build/electron.js",
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10",
  "scripts": {
    "start": "npm run update-version && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron:dev\"",
    "dev": "craco start",
    "electron:prod": "cd build; npx electron electron.js",
    "update-version": "node -e \"const pkg = require('./package.json'); require('fs').writeFileSync('./src/version.js', 'export const APP_VERSION = \\'' + pkg.version + '\\';');\"",
    "build": "npm run update-version && npm run build:react && node prepare-build.js && node simple-build.js && node -e \"require('fs').copyFileSync('public/electron.js', 'build/electron.js')\"",
    "build:react": "craco build",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "release-patch": "node scripts/auto-release.js patch",
    "release-minor": "node scripts/auto-release.js minor",
    "release-major": "node scripts/auto-release.js major"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "google-auth-library": "^10.4.1",
    "googleapis": "^164.1.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.0.0",
    "update-electron-app": "^3.1.1",
    "webdav": "^5.8.0"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@octokit/rest": "^22.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "file-loader": "^6.2.0",
    "png-to-ico": "^3.0.1",
    "react-scripts": "^5.0.1",
    "sharp": "^0.34.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.alwdis.tracker",
    "productName": "Media Tracker",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "build/electron.js",
        "to": "electron.js"
      }
    ],
    "files": [
      "build/**/*",
      "public/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "alwdis",
        "repo": "Tracker"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
